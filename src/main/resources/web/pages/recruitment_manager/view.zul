	<vlayout hflex="1">
			<div sclass="page-header">
                    <a label="${c:l('list.applicant')}" 
                       iconSclass="z-icon-list" sclass="lighter z-label"/>
                </div>
		<listbox id="applicantListbox" hflex="1"  span="true" multiple="true" checkmark="true"
		  vflex="true" sclass="table table-striped table-bordered table-hover" 
                    height="600px"  nonselectableTags="*" >
			<listhead sizable="true">
				<listheader width="50px"></listheader>
				<listheader >Họ và tên</listheader>
				<listheader>Vị trí ứng tuyển</listheader>
				<listheader>Ngày ứng tuyển</listheader>
				<listheader>Trạng thái</listheader>
				<listheader>Kinh nghiệm</listheader>
				<listheader>Kết quả  phỏng vấn</listheader>
				<listheader></listheader>
			</listhead>
			
		</listbox>
		<paging id="pagi" mold="default" hflex="1" ></paging>
	</vlayout>
</hlayout>
